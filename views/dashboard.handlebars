

{{#if posts.length}}
<section>
    <div class="col-lg-12">
      <h2 class="col-lg-12 col-form-label dashboard text-center">Your Posts</h2> 
    </div>
     <button type="submit" class="btn btn-primary create-post-button align-center">Create Post</button>
  <ul>
    {{#each posts as |post|}}
    <li class="lists">
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ul>
</section>
{{else}}
 <h2 class="col-lg-12 col-form-label dashboard text-center">You don't have any posts yet</h2>
   <div class="col-lg-12 col-form-label dashboard text-center">
    <div class="col-lg-12">
      <button type="submit" class="btn btn-primary align-center">Create Post</button>
    </div>
{{/if}}


<script src="/javascript/add-post.js"></script>
