<section>
  <h2 class="create-post">Create New Post</h2>

<form class="col-sm-6 form-layout create-post-form">
  <div class="form-group row">
    <label for="add-tiltle" class="col-sm-2 col-form-label bg-secondary">Title</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="post-tile" placeholder="tilte">
    </div>
  </div>
    <div class="form-group row">
    <label for="add-body" class="col-sm-2 col-form-label bg-secondary">body</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="post-body" placeholder="body">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">
      <button type="submit" class="btn btn-primary">Create Post</button>
    </div>
  </div>
</form>
</section>

{{#if posts.length}}
<section>
  <h2 class="col-lg-11 col-form-label dashboard text-center">Your Posts</h2>
  <ul>
    {{#each posts as |post|}}
    <li class="lists">
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ul>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>
